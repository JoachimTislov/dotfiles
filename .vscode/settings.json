{
  "github.copilot.nextEditSuggestions.enabled": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
  "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.dockercompose",
  "svelte.enable-ts-plugin": true,
  "window.menuBarVisibility": "compact",
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.autofetch": true,
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": true,
  "workbench.iconTheme": "material-icon-theme",
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.colorTheme": "Ros√© Pine Moon (no italics)",
  "css.lint.unknownAtRules": "ignore",
  // vim settings
  "vim.enableNeovim": true,
  "vim.useSystemClipboard": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.visual": "block-outline",
  "vim.leader": "space",
  "vim.showmodename": true,
  "vim.highlightedyank.color": "rgba(150, 150, 150, 0.8)",
  "vim.highlightedyank.enable": true,
  "vim.autoindent": true,
  "vim.incsearch": true,
  "vim.hlsearch": false, // TODO: set to true, and enable escape to remove highlighting
  "vim.inccommand": "replace",
  "vim.replaceWithRegister": true,
  "editor.formatOnSave": true,
  "vim.cursorStylePerMode.visualblock": "block-outline",
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 15,
  "vim.useCtrlKeys": true,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.vimrc",
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false
  },
  "git.openRepositoryInParentFolders": "never",
  "terminal.integrated.stickyScroll.enabled": false,
  "git.confirmSync": false,
  "files.autoSave": "onWindowChange",
  "editor.wordWrap": "on",
  "editor.mouseWheelZoom": true,
  "editor.autoIndentOnPaste": true,
  "editor.codeLens": false,
  "files.autoSaveWhenNoErrors": true,
  "i18n-ally.extract.autoDetect": true,
  "i18n-ally.keystyle": "auto"
}
