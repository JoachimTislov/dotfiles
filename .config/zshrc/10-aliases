eval "$(thefuck --alias)"

alias c="clear"
alias cd="cdls"
alias ls="eza -a --icons=always --hyperlink"
alias ll="eza -l --icons=always --hyperlink"

# Use editor for every nvim misspell
alias n="$EDITOR ."
alias v="$EDITOR"
alias nv="$EDITOR"
alias vi="$EDITOR"
alias nvi="$EDITOR"

if command -v "$EDITOR" >/dev/null 2>&1; then
  alias vim="$EDITOR"
fi

### System ###
alias update-grub='sudo grub-mkconfig -o /boot/grub/grub.cfg'
# alias shutdown="systemctl poweroff"
alias error="journalctl -b -p err"
alias PublicIPv4="curl -4 ip.me"
alias PublicIPv6="curl -6 ip.me"
alias ipv4="ip addr show | grep 'inet ' | grep -v '127.0.0.1' | cut -d' ' -f6 | cut -d/ -f1"
alias ipv6="ip addr show | grep 'inet6 ' | cut -d ' ' -f6 | sed -n '2p'"

alias user-stop="systemctl --user stop"
alias user-start="systemctl --user start"
alias user-enable="systemctl --user enable --now"
alias user-disable="systemctl --user disable --now"
alias user-restart="systemctl --user restart"
alias user-status="systemctl --user status"

alias stop="systemctl stop"
alias start="systemctl start"
alias enable="systemctl enable --now"
alias disable="systemctl disable --now"
alias restart="systemctl restart"
alias status="systemctl status"

# Aliases for apps
alias sea="asciiquarium"
alias spot="ncspot"
alias spotify="spotify-launcher"
alias bonsai="cbonsai -l -i"
alias matrix="cmatrix -Ba -u 3 -C cyan"
alias act="genact -i 3 -s 2"

# Github aliases
alias gs="git status" # Overwrites Ghostscript
alias ga="git add ."
alias gcm="git checkout main"
alias gp="git push"
alias gl="git log"

alias job="java -cp ~/projects/java/cli-no-build-tool Main"
